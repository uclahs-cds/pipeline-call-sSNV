/**
*       EXECUTION SETTINGS AND GLOBAL DEFAULTS
*       External config files import. DO NOT MODIFY THIS LINE!
*/
includeConfig "${projectDir}/config/default.config"
includeConfig "${projectDir}/nextflow.config"
includeConfig "${projectDir}/config/methods.config"

/**
*       Inputs/parameters of the pipeline
*/

params {
    sample_name = 'A-mini'
    algorithm = ['somaticsniper', 'strelka2', 'mutect2', 'mutect2tumor'] // 'somaticsniper', 'strelka2', 'mutect2','mutect2tumor'
    tumor = '/hot/resources/SMC-HET/tumours/A-mini/bams/n2/output/S2.T-n2.bam'
    normal = '/hot/resources/SMC-HET/normal/bams/A-mini/n2/output/HG002.N-n2.bam'
    reference = '/hot/ref/reference/GRCh38-BI-20160721/Homo_sapiens_assembly38.fasta'
    output_dir = '/hot/pipeline/development/slurm/call-sSNV/unreleased/maotian-add-mutect2-tumor-only/output'

    save_intermediate_files = true

    // strelka2 options
    exome = false // adds the '--exome' option when running manta and strelka2

    // mutect2 options
    split_intervals_extra_args = ''
    mutect2_extra_args = ''
    filter_mutect_calls_extra_args = ''
    gatk_command_mem_diff = 500.MB
    scatter_count = 50
    intervals = ''

}

methods.setup()