/**
*       EXECUTION SETTINGS AND GLOBAL DEFAULTS
*       External config files import. DO NOT MODIFY THIS LINE!
*/
includeConfig "${projectDir}/config/default.config"
includeConfig "${projectDir}/nextflow.config"
includeConfig "${projectDir}/config/methods.config"

/**
*       Inputs/parameters of the pipeline
*/

params {
    algorithm = [] // 'somaticsniper', 'strelka2', 'mutect2'
    reference = ''
    output_dir = ''

    save_intermediate_files = false

    // strelka2 options
    exome = false // adds the '--exome' option when running manta and strelka2
    call_region = '/hot/ref/tool-specific-input/Strelka2/GRCh38/strelka2_call_region.bed.gz'

    // mutect2 options
    split_intervals_extra_args = ''
    mutect2_extra_args = ''
    filter_mutect_calls_extra_args = ''
    gatk_command_mem_diff = 500.MB
    scatter_count = 50
    intervals = ''
    germline_resource_gnomad_vcf = '/hot/ref/tool-specific-input/GATK/GRCh38/af-only-gnomad.hg38.vcf.gz'
}

methods.setup()
