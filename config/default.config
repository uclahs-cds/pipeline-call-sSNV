import nextflow.util.SysHelper

params {
    //algorithm running environment
    ucla_cds = true

    cache_intermediate_pipeline_steps = false

    //max_number_of_parallel_jobs = 1
    max_cpus   = SysHelper.getAvailCpus()
    max_memory = SysHelper.getAvailMemory()

    //algorithm version
    pipeval_version = "2.1.6"
    samtools_version = "1.12"
    GATK_version = "4.2.4.1"
    somaticsniper_version = "1.0.5.0"
    bam_readcount_version = "0.8.0"
    strelka2_version = "2.9.10"
    manta_version = "1.6.0"
    MuSE_version = "2.0"
    BCFtools_version = "1.15.1"
    docker_image_samtools = "ghcr.io/uclahs-cds/samtools:${params.samtools_version}"
    docker_image_validate_params = "ghcr.io/uclahs-cds/pipeval:${params.pipeval_version}"
    docker_image_GATK = "broadinstitute/gatk:${params.GATK_version}"
    docker_image_somaticsniper = "ghcr.io/uclahs-cds/somaticsniper:${params.somaticsniper_version}"
    docker_image_bam_readcount = "ghcr.io/uclahs-cds/bam-readcount:${params.bam_readcount_version}"
    docker_image_strelka2 = "ghcr.io/uclahs-cds/strelka2:${params.strelka2_version}"
    docker_image_manta = "ghcr.io/uclahs-cds/manta:${params.manta_version}"
    docker_image_MuSE = "ghcr.io/uclahs-cds/muse:${params.MuSE_version}"
    docker_image_BCFtools = "ghcr.io/uclahs-cds/bcftools:${params.BCFtools_version}"

}

docker {
    enabled = true
    uid_and_gid = "-u \$(id -u):\$(id -g)"
    all_group_ids = "\$(for i in `id --real --groups`; do echo -n \"--group-add=\$i \"; done)"
    runOptions = "${uid_and_gid} ${all_group_ids}"
}


process {
    executor = 'local'
}
